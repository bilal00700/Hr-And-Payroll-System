    <link href="@Url.Content("~/assets/ico/apple-touch-icon-72-precomposed.png")" rel="apple-touch-icon-precomposed" sizes="72x72" />
    <link href="@Url.Content("~/assets/ico/apple-touch-icon-57-precomposed.png")" rel="apple-touch-icon-precomposed" />
