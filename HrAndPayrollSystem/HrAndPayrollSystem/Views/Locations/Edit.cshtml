@model HrAndPayrollSystem.Models.Location

@{
    ViewBag.Title = "Edit";
}

<section class="content-header">
    <h1>
        Edit Location
        <small>Modify the data by using the fields below</small>
    </h1>
    <ol class="breadcrumb">
        <li><i class="fa fa-cog"></i>&nbsp; Basic Setup</li>
        <li>@Html.ActionLink("Location", "Index")</li>
        <li class="active"> Edit</li>
    </ol>
</section>

<section class="content">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Location</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.SystemCode)

            @Html.HiddenFor(model => model.Code)

            <div class="form-group">
                @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-xs-5">
                    @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.PvCode, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-xs-5">
                    @Html.DropDownList("PvCode", null, "Select Province", new { @class = "form-control" })
                    @* @Html.DropDownList("PvCode", (IEnumerable<SelectListItem>)ViewBag.PvCode, "Select Province", new { @class = "form-control" }) *@
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</section>